g = group();

num = 600;
length = 30;

tX = 100;
tY = 500;


repeat i=0: num:
x = step(tX,tY);
y = sin(((360/num)*10)*i)*100;

tX = tX+0.005;
tY = tY+0.005;

/* if lastX+x<0 || lastX+x>WIDTH:
